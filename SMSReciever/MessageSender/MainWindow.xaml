<Window x:Class="MessageSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="text" Margin="10,10,10,50" Height="291" MaxLines="10" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button Name="send" Margin="1,1,1,1" Height="50" MouseDown="send_MouseLeftButtonDown"/>
    </StackPanel>
</Window>
